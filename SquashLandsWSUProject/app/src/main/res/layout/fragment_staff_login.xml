<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="700sp">

    <EditText
        android:id="@+id/editTextStaffLoginPin"
        android:layout_width="483dp"
        android:layout_height="0dp"
        android:layout_marginTop="184dp"
        android:layout_marginBottom="37dp"
        android:ems="10"
        android:hint="Staff Login PIN"
        android:inputType="numberPassword"
        android:textAlignment="center"
        android:textSize="24sp"
        app:layout_constraintBottom_toTopOf="@+id/buttonStaffLogin"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:maxLength="6"/>

    <Button
        android:id="@+id/buttonStaffLogin"
        android:layout_width="285dp"
        android:layout_height="0dp"
        android:layout_marginBottom="369dp"
        android:background="@drawable/back_button"
        android:fontFamily="@font/roboto_mono_medium"
        android:text="Login"
        android:textColor="@color/colorText"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editTextStaffLoginPin" />
</androidx.constraintlayout.widget.ConstraintLayout>